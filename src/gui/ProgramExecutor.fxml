<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ProgramExecutorController">
    <children>
        <Label text="Number of Program States">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="numberOfPrgStatesTextField" editable="false" promptText="Number of states" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <VBox>
                    <children>
                        <Label text="Heap Table" />
                        <TableView fx:id="heapTableView" prefHeight="200.0" prefWidth="200.0">
                            <columns>
                                <TableColumn fx:id="addressColumn" prefWidth="100.0" text="Address" />
                                <TableColumn fx:id="valueColumn" prefWidth="99.0" text="Value" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Output List" />
                        <ListView fx:id="outputListView" prefHeight="200.0" prefWidth="200.0" />
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label text="File Table" />
                        <ListView fx:id="fileTableListView" prefHeight="200.0" prefWidth="200.0" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <VBox>
                    <children>
                        <Label text="PrgState IDs" />
                        <ListView fx:id="prgStateListIdListView" prefHeight="200.0" prefWidth="200.0" />
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Symbol Table" />
                        <TableView fx:id="symbolTableView" prefHeight="200.0" prefWidth="200.0">
                            <columns>
                                <TableColumn fx:id="variableNameColumn" prefWidth="99.0" text="Variable Name" />
                                <TableColumn fx:id="variableValueColumn" prefWidth="100.0" text="Value" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Execution Stack" />
                        <ListView fx:id="executionStackListView" prefHeight="200.0" prefWidth="200.0" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <Button fx:id="runOneStepButton" mnemonicParsing="false" onAction="#runOneStep" text="Run One Step">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>